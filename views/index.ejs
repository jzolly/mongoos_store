<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('./partials/head.ejs') %>
		<title>Product Display</title>
	</head>
	<body>
        <header>
            <div class="container">

            </div>
        </header>
        <div class="topnav">
            <h1>Tiny Garden's Succulents</h1>
        </div>
        <a href="/products/new">Add a New Product</a>
        <ul>
			<% products.forEach(product => { %>
			<li>
                <img src="<%= product.img; %>" alt="<%= product._id; %>" height="200"/> <br />
                <a href="/products/<%= product._id; %> "><%=product.name; %></a>
            </li>
			<% }) %>
		</ul>
       <nav>
       </nav>
	</body>
</html>